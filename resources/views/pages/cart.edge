@layout.app()
  @slot('main')
    <div x-data="CartPage()" x-init="loadData()" class="min-h-screen bg-gray-50">
      <!-- Header -->
      <header class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between h-16">
            <div class="flex items-center">
              <a href="/" class="text-xl font-bold text-orange-600">QuelMerce</a>
            </div>
            <nav class="flex space-x-8">
              <a href="/" class="text-gray-500 hover:text-gray-700">Voltar às Compras</a>
            </nav>
          </div>
        </div>
      </header>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="lg:grid lg:grid-cols-12 lg:gap-x-12 lg:items-start xl:gap-x-16">
          <!-- Lista de itens -->
          <div class="lg:col-span-7">
            <h1 class="text-3xl font-extrabold text-gray-900 mb-8">Carrinho de Compras</h1>
            
            <!-- Carrinho vazio -->
            <div x-show="$store.cart.items.length === 0" class="text-center py-12">
              <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4" />
              </svg>
              <h3 class="mt-4 text-lg font-medium text-gray-900">Seu carrinho está vazio</h3>
              <p class="mt-2 text-sm text-gray-500">Adicione alguns produtos para começar suas compras.</p>
              <div class="mt-6">
                <a
                  href="/"
                  class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700"
                >
                  Continuar Comprando
                </a>
              </div>
            </div>

            <!-- Itens do carrinho -->
            <div x-show="$store.cart.items.length > 0" class="space-y-6">
              <template x-for="item in $store.cart.items" :key="item.id">
                <div class="flex space-x-4 py-6 border-b border-gray-200">
                  <!-- Imagem do produto -->
                  <div class="flex-shrink-0">
                    <img 
                      x-bind:src="item.thumbnailUrl || 'data:image/svg+xml;base64,'" 
                      x-bind:alt="item.name"
                      class="w-24 h-24 object-cover rounded-lg bg-gray-100"
                    />
                  </div>
                  
                  <!-- Informações do produto -->
                  <div class="flex-1 min-w-0">
                    <h3 class="text-lg font-medium text-gray-900" x-text="item.name"></h3>
                    <p class="mt-1 text-sm text-gray-500" x-show="item.description" x-text="item.description"></p>
                    
                    <!-- Controles de quantidade -->
                    <div class="flex items-center space-x-3 mt-4">
                      <label class="text-sm font-medium text-gray-700">Quantidade:</label>
                      <div class="flex items-center space-x-2">
                        <button
                          @click="$store.cart.updateQuantity(item, item.quantity - 1)"
                          class="w-8 h-8 rounded-full border border-gray-300 flex items-center justify-center text-gray-600 hover:bg-gray-50"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                          </svg>
                        </button>
                        
                        <span class="text-lg font-medium text-gray-900 w-12 text-center" x-text="item.quantity"></span>
                        
                        <button
                          @click="$store.cart.updateQuantity(item, item.quantity + 1)"
                          class="w-8 h-8 rounded-full border border-gray-300 flex items-center justify-center text-gray-600 hover:bg-gray-50"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                          </svg>
                        </button>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Preço e botão remover -->
                  <div class="flex flex-col items-end space-y-4">
                    <p class="text-lg font-medium text-gray-900">
                      R$ <span x-text="((item.price || 0) * item.quantity).toLocaleString('pt-BR', { minimumFractionDigits: 2 })"></span>
                    </p>
                    <button
                      @click="$store.cart.removeItem(item)"
                      class="text-gray-400 hover:text-red-500"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    </button>
                  </div>
                </div>
              </template>
            </div>
          </div>

          <!-- Resumo do pedido -->
          <div x-show="$store.cart.items.length > 0" class="mt-16 lg:mt-0 lg:col-span-5">
            <div class="bg-white border border-gray-200 rounded-lg p-6 sticky top-8">
              <h2 class="text-lg font-medium text-gray-900 mb-6">Resumo do Pedido</h2>
              
              <!-- Cupom -->
              <div class="mb-6">
                <label for="coupon" class="block text-sm font-medium text-gray-700 mb-2">Cupom de desconto</label>
                <div class="flex space-x-2">
                  <input
                    type="text"
                    id="coupon"
                    placeholder="Digite seu cupom"
                    class="flex-1 px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                  />
                  <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-md text-sm hover:bg-gray-200">
                    Aplicar
                  </button>
                </div>
              </div>

              <!-- Resumo dos valores -->
              <div class="space-y-4 border-t border-gray-200 pt-4">
                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">Subtotal:</span>
                  <span class="font-medium">R$ <span x-text="(() => {
                    return $store.cart.items.reduce((total, item) => {
                      return total + ((item.price || 0) * item.quantity)
                    }, 0).toLocaleString('pt-BR', { minimumFractionDigits: 2 })
                  })()"></span></span>
                </div>
                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">Frete:</span>
                  <span class="font-medium">Calculando...</span>
                </div>
                <div class="flex justify-between text-lg font-medium border-t border-gray-200 pt-4">
                  <span>Total:</span>
                  <span>R$ <span x-text="(() => {
                    return $store.cart.items.reduce((total, item) => {
                      return total + ((item.price || 0) * item.quantity)
                    }, 0).toLocaleString('pt-BR', { minimumFractionDigits: 2 })
                  })()"></span></span>
                </div>
              </div>

              <!-- Botão finalizar compra -->
              <button class="w-full bg-orange-600 text-white py-3 px-4 rounded-md text-sm font-medium hover:bg-orange-700 mt-6">
                Finalizar Compra
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      function CartPage() {
        return {
          loadData() {
            // A página carrega automaticamente os dados do carrinho do store
          }
        };
      }
    </script>
  @endslot
@end
