@layout.app()
  @slot('main')
    <div x-data="{}" class="min-h-screen bg-gray-50">
      <!-- Header -->
      @include('components/header')

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8" x-show="$store.cart.items.length > 0">
        <div class="lg:grid lg:grid-cols-12 lg:gap-x-12 lg:items-start xl:gap-x-16">
          <!-- Lista de itens -->
          <div class="lg:col-span-7">
            <h1 class="text-3xl font-extrabold text-gray-900 mb-8">
              Carrinho de Compras
            </h1>

            <!-- Itens do carrinho -->
            <div x-show="$store.cart.items.length > 0" class="space-y-6">
              <template x-for="item in $store.cart.items" :key="item.id">
                <div class="flex space-x-4 py-6 border-b border-gray-200">
                  <!-- Imagem do produto -->
                  <div class="flex-shrink-0">
                    <img
                      x-bind:src="item.thumbnailUrl || 'data:image/svg+xml;base64,'"
                      x-bind:alt="item.name"
                      class="w-24 h-24 object-cover rounded-lg bg-gray-100"
                    />
                  </div>

                  <!-- Informações do produto -->
                  <div class="flex-1 min-w-0">
                    <h3 class="text-lg font-medium text-gray-900" x-text="item.name">
                    </h3>
                    <p class="mt-1 text-sm text-gray-500" x-show="item.description" x-text="item.description">
                    </p>

                    <!-- Controles de quantidade -->
                    <div class="flex items-center space-x-3 mt-4">
                      <label class="text-sm font-medium text-gray-700">Quantidade:</label>
                      <div class="flex items-center space-x-2">
                        <button
                          @click="$store.cart.updateQuantity(item, item.quantity - 1)"
                          class="w-8 h-8 rounded-full border border-gray-300 flex items-center justify-center text-gray-600 hover:bg-gray-50"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                          </svg>
                        </button>

                        <span class="text-lg font-medium text-gray-900 w-12 text-center" x-text="item.quantity"></span>

                        <button
                          @click="$store.cart.updateQuantity(item, item.quantity + 1)"
                          class="w-8 h-8 rounded-full border border-gray-300 flex items-center justify-center text-gray-600 hover:bg-gray-50"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                          </svg>
                        </button>
                      </div>
                    </div>
                  </div>

                  <!-- Preço e botão remover -->
                  <div class="flex flex-col items-end space-y-4">
                    <p class="text-lg font-medium text-gray-900">
                      <span
                        x-text="((item.price || 0) * item.quantity).toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' })"
                      ></span>
                    </p>
                    <button @click="$store.cart.removeItem(item)" class="text-gray-400 hover:text-red-500">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                        />
                      </svg>
                    </button>
                  </div>
                </div>
              </template>
            </div>
          </div>

          <!-- Resumo do pedido -->
          <div x-show="$store.cart.items.length > 0" class="mt-16 lg:mt-0 lg:col-span-5">
            <div class="bg-white border border-gray-200 rounded-lg p-6 sticky top-8">
              <h2 class="text-lg font-medium text-gray-900 mb-6">
                Resumo do Pedido
              </h2>

              <!-- Cupom -->
              <div class="mb-6">
                <label for="coupon" class="block text-sm font-medium text-gray-700 mb-2">Cupom de desconto</label>

                <!-- Campo de cupom -->
                <div x-show="!$store.cart.coupon" class="flex space-x-2">
                  <input
                    type="text"
                    id="coupon"
                    x-model="$store.cart.couponCode"
                    placeholder="Digite seu cupom"
                    class="flex-1 px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                    :disabled="$store.cart.couponLoading"
                  />
                  <button
                    @click="$store.cart.applyCoupon()"
                    class="px-4 py-2 bg-orange-600 text-white rounded-md text-sm hover:bg-orange-700 disabled:opacity-50 disabled:cursor-not-allowed"
                    :disabled="$store.cart.couponLoading || !$store.cart.couponCode.trim()"
                  >
                    <span x-show="!$store.cart.couponLoading">Aplicar</span>
                    <span x-show="$store.cart.couponLoading" class="flex items-center">
                      <svg
                        class="animate-spin -ml-1 mr-2 h-4 w-4 text-white"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                      >
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" />

                        <path
                          class="opacity-75"
                          fill="currentColor"
                          d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                        />

                      </svg>
                      Aplicando...
                    </span>
                  </button>
                </div>

                <!-- Cupom aplicado -->
                <div x-show="$store.cart.coupon" class="bg-green-50 border border-green-200 rounded-md p-3">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-2">
                      <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                      </svg>
                      <div>
                        @!component('components/tooltip', {
                          trigger: '<p class="text-sm font-medium text-green-800" x-text="$store.cart.coupon.code"></p>',
                          tooltipContent: `
                            <div x-show="$store.cart.coupon?.minimumOrderValue">
                              <span class="font-medium">Valor mínimo:</span> <span x-text="(Number($store.cart.coupon?.minimumOrderValue) || 0).toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' })"></span>
                            </div>
                            <div x-show="$store.cart.coupon?.maximumDiscount">
                              <span class="font-medium">Valor máximo:</span> <span x-text="(Number($store.cart.coupon?.maximumDiscount) || 0).toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' })"></span>
                            </div>
                            <div x-show="$store.cart.coupon?.maximumDiscount">
                              <span class="font-medium">Desconto máximo:</span> <span x-text="(Number($store.cart.coupon?.maximumDiscount) || 0).toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' })"></span>
                            </div>
                            <div x-show="$store.cart.coupon?.usageLimit">
                              <span class="font-medium">Máximo de usos:</span> <span x-text="$store.cart.coupon?.usageLimit"></span>
                            </div>
                            <div>
                              <span class="font-medium">Tipo:</span> <span x-text="$store.cart.coupon?.discountType === 'PERCENTAGE' ? 'Porcentagem' : 'Valor fixo'"></span>
                            </div>
                            <div x-show="$store.cart.coupon?.discountType === 'PERCENTAGE'">
                              <span class="font-medium">Desconto:</span> <span x-text="$store.cart.coupon?.discountValue"></span>%
                            </div>
                            <div x-show="$store.cart.coupon?.discountType === 'FIXED_AMOUNT'">
                              <span class="font-medium">Desconto:</span> <span x-text="(Number($store.cart.coupon?.discountValue) || 0).toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' })"></span>
                            </div>
                          `,
                          triggerClass: 'cursor-help'
                        })
                        <p class="text-xs text-green-600" x-text="$store.cart.coupon.description">
                        </p>
                      </div>
                    </div>
                    <button
                      @click="$store.cart.removeCoupon()"
                      class="text-green-600 hover:text-green-800"
                      title="Remover cupom"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    </button>
                  </div>
                </div>

                <!-- Erro do cupom -->
                <div x-show="$store.cart.couponError" class="mt-2 bg-red-50 border border-red-200 rounded-md p-2">
                  <p class="text-xs text-red-600" x-text="$store.cart.couponError">
                  </p>
                </div>
              </div>

              <!-- Resumo dos valores -->
              <div class="space-y-4 border-t border-gray-200 pt-4">
                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">Subtotal:</span>
                  <span class="font-medium">                    <span
                      x-text="$store.cart.getSubtotal().toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' })"
                    ></span></span>
                </div>

                <!-- Desconto do cupom -->
                <div
                  x-show="$store.cart.coupon && $store.cart.getDiscount() > 0"
                  class="flex justify-between text-sm"
                >
                  <span class="text-gray-600">Desconto:</span>
                  <span class="font-medium text-green-600">- <span
                      x-text="$store.cart.getDiscount().toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' })"
                    ></span></span>
                </div>

                <div class="flex justify-between text-lg font-medium border-t border-gray-200 pt-4">
                  <span>Total:</span>
                  <span>                    <span x-text="$store.cart.getTotal().toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' })"></span></span>
                </div>
              </div>

              <!-- Botão finalizar compra -->
              <button
                class="w-full bg-orange-600 text-white py-3 px-4 rounded-md text-sm font-medium hover:bg-orange-700 mt-6"
                @click="$store.cart.createOrder('PIX')"
                x-bind:disabled="$store.cart.isCreatingOrder"
                x-bind:class="{ 'opacity-50 cursor-not-allowed': $store.cart.isCreatingOrder }"
              >
                <span x-show="!$store.cart.isCreatingOrder">Finalizar Compra</span>
                <span x-show="$store.cart.isCreatingOrder" class="flex items-center gap-2">
                  <svg
                    class="animate-spin -ml-1 mr-3 h-5 w-5 text-white"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                  >
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" />
                    <path
                      class="opacity-75"
                      fill="currentColor"
                      d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                    />
                  </svg>
                  Finalizando compra...
                </span>
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Carrinho vazio -->
      <div x-show="$store.cart.items.length === 0" class="text-center py-12">
        <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4" />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">
          Seu carrinho está vazio
        </h3>
        <p class="mt-2 text-sm text-gray-500">
          Adicione alguns produtos para começar suas compras.
        </p>
        <div class="mt-6">
          <a
            href="/"
            class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700"
          >
            Continuar Comprando
          </a>
        </div>
      </div>
    </div>

  @endslot
@end
